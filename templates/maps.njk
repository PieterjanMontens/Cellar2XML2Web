
{% comment %}
  One page per dcterms:isPartOf collection.
  permalink is generated by Eleventy’s `pagination` below.
{% endcomment %}

---
pagination:
  data: collections.maps
  size: 1
  alias: issuedGroup
  addAllPagesToCollections: true
permalink: "{{ issuedGroup[0][0].issued }}/{{ issuedGroup[0][0].collection | slug }}/index.html"
layout: layouts/base.njk
title: "{{ issuedGroup[0][0].collection }} — {{ issuedGroup[0][0].issued | prettyDate }}"
---

<h2 class="mt-6 text-xl font-semibold">
  {{ issuedGroup[0][0].collection }} <small class="text-gray-500">{{ issuedGroup[0][0].issued | prettyDate }}</small>
</h2>

{% for docType, records in issuedGroup[0][0].items %}
  <details class="mt-4">
    <summary class="cursor-pointer font-medium">{{ docType }}</summary>
    <ul class="ml-6 mt-2 list-disc">
      {% for r in records %}
        <li>
          <a href="{{ r.loc }}" target="_blank" class="text-blue-600 hover:underline">
            {{ r.num }} – {{ r.title or '(no title)' }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </details>
{% endfor %}
