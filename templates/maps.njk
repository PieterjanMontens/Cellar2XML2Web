---
pagination:
  data: collections.maps        # array, one object per page
  size: 1
  alias: map                    # each page gets `map`
permalink: "{{ map.issued }}/{{ map.collection | slug }}/index.html"
layout: layouts/base.njk
title: "{{ map.collection }} — {{ map.issued | prettyDate }}"
---

<h2 class="mt-6 text-xl font-semibold">
  {{ map.collection }} <small class="text-gray-500">{{ map.issued | prettyDate }}</small>
</h2>

{% for docType, records in map.items %}
  <details class="mt-4">
    <summary class="cursor-pointer font-medium">{{ docType }}</summary>
    <ul class="ml-6 mt-2 list-disc">
      {% for r in records %}
        <li>
          <a href="{{ r.loc }}" target="_blank" class="text-blue-600 hover:underline">
            {{ r.num }} – {{ r.title or '(no title)' }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </details>
{% endfor %}
